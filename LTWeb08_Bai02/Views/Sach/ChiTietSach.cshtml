@model LTWeb08_Bai02.Models.SACH

@{
    ViewBag.Title = "Chi tiết sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container mt-4">
        <div class="card shadow-sm p-4">
            <h2 class="fw-bold text-primary mb-4 text-center">THÔNG TIN CHI TIẾT SÁCH</h2>

            <div class="row mb-3">
                <div class="col-md-2 fw-semibold">Tên sách:</div>
                <div class="col-md-10">@Model.TenSach</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-2 fw-semibold">Giá bán:</div>
                <div class="col-md-10">@String.Format("{0:0,0} VNĐ", Model.GiaBan)</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-2 fw-semibold">Mô tả:</div>
                <div class="col-md-10">@Html.Raw(Model.MoTa)</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-2 fw-semibold">Ảnh bìa:</div>
                <div class="col-md-10">
                    <img src="@Url.Content("~/Images/" + Model.AnhBia)" width="150" class="rounded shadow-sm" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-2 fw-semibold">Ngày cập nhật:</div>
                <div class="col-md-10">@String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-2 fw-semibold">Số lượng tồn:</div>
                <div class="col-md-10">@Model.SoLuongTon</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-2 fw-semibold">Chủ đề:</div>
                <div class="col-md-10">
                    @(Model.CHUDE != null ? Model.CHUDE.TenChuDe : "Không có dữ liệu")
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-2 fw-semibold">Nhà xuất bản:</div>
                <div class="col-md-10">
                    @(Model.NHAXUATBAN != null ? Model.NHAXUATBAN.TenNXB : "Không có dữ liệu")
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("SuaSach", "Sach", new { id = Model.MaSach })" class="btn btn-primary px-4 me-2">ĐIỀU CHỈNH</a>
                <a href="@Url.Action("DMSach", "Sach")" class="btn btn-danger px-4">TRỞ VỀ</a>
            </div>
        </div>
    </div>
</body>
</html>



