@model LTWeb08_Bai02.Models.SACH

@{
    ViewBag.Title = "Thêm mới sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container mt-4">
        <form action="@Url.Action("ThemMoiSach", "Sach")" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="card shadow-sm p-4 rounded-3">
                <h2 class="fw-bold mb-4 text-center text-primary">THÊM MỚI SÁCH</h2>

                <div class="row mb-3 align-items-center">
                    <label class="col-sm-2 col-form-label fw-semibold">Tên Sách</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.TenSach, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.TenSach, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3 align-items-center">
                    <label class="col-sm-2 col-form-label fw-semibold">Giá Bán</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.GiaBan, new { @class = "form-control", type = "number", step = "1000", min = "0" })
                        @Html.ValidationMessageFor(m => m.GiaBan, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3 align-items-start">
                    <label class="col-sm-2 col-form-label fw-semibold">Mô Tả</label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = 3 })
                    </div>
                </div>

                <div class="row mb-3 align-items-center">
                    <label class="col-sm-2 col-form-label fw-semibold">Ảnh Bìa</label>
                    <div class="col-sm-10">
                        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                        @Html.ValidationMessageFor(m => m.AnhBia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3 align-items-center">
                    <label class="col-sm-2 col-form-label fw-semibold">Ngày Cập Nhật</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.NgayCapNhat, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(m => m.NgayCapNhat, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3 align-items-center">
                    <label class="col-sm-2 col-form-label fw-semibold">Số lượng tồn</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.SoLuongTon, new { @class = "form-control", type = "number", step = "1", min = "0" })
                        @Html.ValidationMessageFor(m => m.SoLuongTon, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3 align-items-center">
                    <label class="col-sm-2 col-form-label fw-semibold">Chủ Đề</label>
                    <div class="col-sm-10">
                        @Html.DropDownList("MaCD", (SelectList)ViewBag.MaCD, "-- Chọn chủ đề --", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.MaCD, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3 align-items-center">
                    <label class="col-sm-2 col-form-label fw-semibold">Nhà Xuất Bản</label>
                    <div class="col-sm-10">
                        @Html.DropDownList("MaNXB", (SelectList)ViewBag.MaNXB, "-- Chọn nhà xuất bản --", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.MaNXB, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col text-center">
                        <button type="submit" class="btn btn-success px-4 mx-2">THÊM MỚI</button>
                        <a href="@Url.Action("DMSach", "Sach")" class="btn btn-danger px-4 mx-2">VỀ TRANG QUẢN LÝ SÁCH</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script src="/tinymce/tinymce.min.js"></script>
    <script>
        tinymce.init({ selector: 'textarea' });
    </script>
</body>
</html>



